{{> header}}
    <h1 class="infoCoffrets">
    Coffret 
    {{#box.isCurrent}} courant {{/box.isCurrent}}
    {{^box.isCurrent}} non courant {{/box.isCurrent}}
    contenant {{box.prestations.length}} prestation(s).
    </h1>
    <div class="container">
        {{#box.prestations}}
        <div class="card">
            <a  href="/box/{{box._id}}/{{_id}}" >
                <div class="card-title">{{title}}</div>
                <div class="card-img"><img src="/img/{{image}}"></div>
            </a>
            <div class="card-footer">
                <span class="price">{{price}}€</span>
                {{^box.isPaid}}
                        <a class="rmPrest" href="/rmPrest/{{box._id}}/{{prestation._id}}"><i class="fas fa-trash-alt"></i></a>
                {{/box.isPaid}} 
            </div>
        </div>
        {{/box.prestations}}
    </div>
    {{^isCurrent}}
        <a href="/changeCurr/{{box._id}}" class="modifsBox">Sélectionner le coffret comme coffret courant</a>
    {{/isCurrent}}
    {{^box.isPaid}}
        <a href="/delete/{{box._id}}" class="modifsBox">Supprimer le coffret</a>
    {{/box.isPaid}} 
{{> footer}}