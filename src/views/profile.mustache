{{> header}}
    <h1 class="titreProfil">Profil de l'utilisateur {{user.email}}</h1>
    <div class="container">
        {{#user.boxes}}
        {{^isCurrent}}
            <div class="box nonCurrent">
        {{/isCurrent}}
        {{#isCurrent}}
            <div class="box current">
        {{/isCurrent}}
            <p class="card-title">
                {{#isCurrent}}
                    Coffret en cours
                {{/isCurrent}}
                {{^isCurrent}}
                    Autre coffret
                {{/isCurrent}}
            </p>
                Nombre de prestations : {{prestations.length}}
                {{^isPaid}}
                </br>Le coffret n'est pas validé !
                <a href=/box/{{_id}}>Modifier le contenu du coffret</a>
                {{/isPaid}}
                {{#isPaid}}
                Le coffret est validé !
                <a href=/box/{{_id}}/suivi>Suivre le coffret</a>
                {{/isPaid}}
            </br>
            {{#urlGift}}
            <input disabled="disabled" value={{host}}/box/gift/{{user.id}}/{{urlGift}}> 
            {{/urlGift}}
            {{^urlGift}}
            <a href=/box/giftGenerate/{{_id}}>Génerer votre Url cadeau !</a> 
            {{/urlGift}}
        </div>
        {{/user.boxes}}
    </div>
    <a href="/profile/modify" class="modifProfil">Modifier ses informations personnelles</a>
{{> footer}}